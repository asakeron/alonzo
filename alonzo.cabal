cabal-version:      3.0
name:               alonzo
version:            0.0.0.0
synopsis:           Lambda calculus fun
homepage:           https://github.com/asakeron/alonzo
bug-reports:        https://github.com/asakeron/alonzo
license:            AGPL-3.0-or-later
license-file:       COPYING
author:             AndrÃ©
maintainer:         abs@emancipe.se
